@model Seller
@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Data</h4>
    <hr />
    <dl class="list-group-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Model.Name</dd>
        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
        <dd>@Model.Email</dd>
        <dt>@Html.DisplayNameFor(model => model.BirthDate)</dt>
        <dd>@Model.BirthDate</dd>
        <dt>@Html.DisplayNameFor(model => model.BaseSalary)</dt>
        <dd>@Model.BaseSalary.ToString("C")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger"/>
        <a asp-action="Index">Back to List</a>
    </form>
</div>