@model Seller
@{
    ViewData["Title"] = "Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Data</h4>
    <hr />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
                <th>@Html.DisplayNameFor(model => model.BaseSalary)</th>
                <th>@Html.DisplayNameFor(model => model.Department)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Name</td>
                <td>@Model.Email</td>
                <td>@Model.BirthDate</td>
                <td>@Model.BaseSalary.ToString("C")</td>
                <td>@Model.Department.Name</td>
            </tr>
        </tbody>
    </table>
    <form asp-action="Delete" class="align-content-center">
        <input type="hidden" asp-for="Id" />
        <a type="button" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
        <a asp-action="Index">Back to List</a>
    </form>
</div>